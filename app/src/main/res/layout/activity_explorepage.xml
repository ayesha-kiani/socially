<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar: Fixed at top -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/status_icons"
            app:tint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            app:tint="@color/black"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <!-- Scrollable content below top bar -->
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Search Bar -->
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Search"
                android:textColor="@color/rust"
                android:drawableLeft="@drawable/searchicon"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:textColorHint="@color/rust"
                android:textSize="16sp" />

            <!-- Categories Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/categories_container"
                    style="?android:attr/buttonBarStyle"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/shop"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/rust"
                        android:text="Shop" />

                    <Button
                        android:id="@+id/style"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/rust"
                        android:text="Style" />

                    <Button
                        android:id="@+id/sports"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/rust"
                        android:text="Sports" />

                    <Button
                        android:id="@+id/auto"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/rust"
                        android:text="Auto" />

                    <Button
                        android:id="@+id/music"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/rust"
                        android:text="Music" />
                </LinearLayout>
            </HorizontalScrollView>

            <GridLayout
                android:id="@+id/image_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:padding="4dp">

                <!-- Top-left: one column, tall image -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_rowSpan="2"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Top two: two columns wide, large image -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="2"
                    android:layout_columnSpan="2"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-left: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-middle: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-right: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-middle: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-right: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-middle: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-right: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-middle: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />

                <!-- Middle-right: one column, regular square -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greece" />
                <!-- Add more ImageViews as you want, adjusting their column/row, rowSpan/columnSpan, and heights
                     to create the mixed, collage/masonry effect -->
            </GridLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/homeicon"
            android:contentDescription="Home"
            app:tint="@color/rust"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/searchicon"
            android:contentDescription="Search"
            app:tint="@color/darkoral"
            android:background="@color/coral"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/nav_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/addposticon"
            android:contentDescription="Add"
            app:tint="@color/rust"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/activityhearticon"
            android:contentDescription="Likes"
            app:tint="@color/rust"
            android:padding="8dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/oval"
            android:contentDescription="Profile"
            android:scaleType="centerCrop"
            android:padding="4dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
