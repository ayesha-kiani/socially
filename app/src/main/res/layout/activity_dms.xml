<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    >

    <!-- Status Bar -->
    <RelativeLayout
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/camera"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/status_icons"
            app:tint="@color/black" />
    </RelativeLayout>
    <!-- ScrollView for main content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <!-- Your existing LinearLayout and content go here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!-- Top bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="#FFF"
                >
                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/chevronleft"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    app:tint="@color/rust" />
                <TextView
                    android:id="@+id/convo_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jacob_w"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/rust"
                    android:layout_centerInParent="true" />
                <ImageView
                    android:id="@+id/add_convo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/plus"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/rust"/>
            </RelativeLayout>
            <!-- Search bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="#F5F5F5"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/searchicon"
                    app:tint="#D3D3D3"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Search"
                    android:textSize="15sp"
                    android:paddingLeft="8dp"
                    android:inputType="text"/>
            </LinearLayout>
            <!-- Chat row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/oval"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border"/>
                <LinearLayout
                    android:id="@+id/chat1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Have a nice day, bro!"
                        android:textSize="14sp"
                        android:textColor="#444"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙ now"
                    android:textColor="#AAA"
                    android:textSize="13sp"
                    android:layout_marginLeft="6dp"/>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera_1"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/rust"/>
            </LinearLayout>
            <!-- Chat row 2 -->
            <LinearLayout
                android:id="@+id/chat2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/oval"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="karennne"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I heard this is a good movie, s..."
                        android:textSize="14sp"
                        android:textColor="#444"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙ now"
                    android:textColor="#AAA"
                    android:textSize="13sp"
                    android:layout_marginLeft="6dp"/>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera_1"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/rust"/>
            </LinearLayout>
            <!-- Chat row 3 -->
            <LinearLayout
                android:id="@+id/chat3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/oval"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="martini_rond"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See you on the next meeting!"
                        android:textSize="14sp"
                        android:textColor="#444"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙ 15m"
                    android:textColor="#AAA"
                    android:textSize="13sp"
                    android:layout_marginLeft="6dp"/>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera_1"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/rust"/>
            </LinearLayout>
            <!-- Chat row 4 -->
            <LinearLayout
                android:id="@+id/chat4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/oval"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="andrewww_"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sounds good 😂😂😂"
                        android:textSize="14sp"
                        android:textColor="#444"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∙ 20m"
                    android:textColor="#AAA"
                    android:textSize="13sp"
                    android:layout_marginLeft="6dp"/>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera_1"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/rust"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom overlay for camera button and progress bar -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="36dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/bottom_camera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/camera_1"
                app:tint="@color/rust"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textColor="#222"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="6dp"
            android:background="@drawable/blackline"
            android:layout_marginTop="18dp"
            android:backgroundTint="@color/rust"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
