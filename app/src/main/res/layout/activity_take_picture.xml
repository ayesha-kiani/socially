<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <ImageView
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/statusbar"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cameraCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusbar"
        app:layout_constraintBottom_toTopOf="@id/camera_mode_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tree" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/settings"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/cameraCard"
        app:layout_constraintStart_toStartOf="@id/cameraCard"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp" />

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/chevronright"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/cameraCard"
        app:layout_constraintEnd_toEndOf="@id/cameraCard"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp" />

    <LinearLayout
        android:id="@+id/camera_options"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/cameraCard"
        app:layout_constraintStart_toStartOf="@id/cameraCard"
        app:layout_constraintEnd_toEndOf="@id/cameraCard"
        android:layout_marginBottom="28dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/roundedrectangle"
            android:background="@drawable/japan"
            android:layout_marginEnd="20dp"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/flash"
            android:layout_marginEnd="24dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/takepicture"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/circle_blue"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/switchcamera"
            android:layout_marginEnd="24dp"
            app:tint="@color/white" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/emoji"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/camera_mode_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textColor="#B48A8A"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textColor="#B48A8A"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NORMAL"
                android:textColor="#B73557"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOMERANG"
                android:textColor="#B48A8A"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUPERZOOM"
                android:textColor="#B48A8A"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="6dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/blackline"
            android:backgroundTint="@color/rust"
            android:layout_gravity="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
