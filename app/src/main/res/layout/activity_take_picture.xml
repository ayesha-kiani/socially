<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <ImageView
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/statusbar"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tree"
        app:layout_constraintTop_toBottomOf="@id/statusbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/settings"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/settings"
        app:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/statusbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/chevronright"
        app:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/statusbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp" /><!-- Floating Camera Options Row (over camera preview) -->
    <LinearLayout
        android:id="@+id/camera_options"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/camera_mode_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/roundedrectangle"
            android:background="@drawable/japan"
            android:layout_marginEnd="20dp"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/flash"
            android:layout_marginEnd="24dp"
            app:tint="#FFF" />

        <ImageView
            android:id="@+id/takepicture"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/circle_blue"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/switchcamera"
            android:layout_marginEnd="24dp"
            app:tint="#FFF" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/emoji"
            app:tint="#FFF" />
    </LinearLayout>

    <!-- Bottom Camera Mode and Swipe Bar Container -->
    <LinearLayout
        android:id="@+id/camera_mode_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Camera Mode Selector Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textColor="#B48A8A"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textColor="#B48A8A"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NORMAL"
                android:textColor="#B73557"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOMERANG"
                android:textColor="#B48A8A"
                android:textSize="13sp"
                android:paddingEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUPERZOOM"
                android:textColor="#B48A8A"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Swipe Up Bar Indicator -->
        <View
            android:layout_width="150dp"
            android:layout_height="6dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/blackline"
            android:backgroundTint="@color/rust"
            android:layout_gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
