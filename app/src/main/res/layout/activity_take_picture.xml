<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/main">

    <!-- Camera Preview -->
    <ImageView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/flower"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top Bar with left/right icons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/camera_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/close"
            app:tint="#FFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/camera_forward"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/leftarrow"
            app:tint="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom controls overlay (now a ConstraintLayout child) -->
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:paddingBottom="16dp"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Camera options row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|center"
            android:background="@android:color/transparent"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/roundedrectangle"
                android:background="@drawable/japan"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                app:tint="#FFF"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/flash"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="24dp"
                app:tint="#FFF"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/circle_blue"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/switchcamera"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="24dp"
                app:tint="#FFF"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/emoji"
                android:layout_gravity="center_vertical"
                app:tint="@color/white"/>
        </LinearLayout>

        <!-- Camera mode row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/black"
            android:layout_marginTop="10dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="TYPE" android:textColor="#B48A8A" android:textSize="13sp"
                android:paddingEnd="16dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="LIVE" android:textColor="#B48A8A" android:textSize="13sp"
                android:paddingEnd="16dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="NORMAL" android:textColor="#B73557" android:textStyle="bold"
                android:textSize="13sp" android:paddingEnd="16dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="BOOMERANG" android:textColor="#B48A8A" android:textSize="13sp"
                android:paddingEnd="16dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="SUPERZOOM" android:textColor="#B48A8A" android:textSize="13sp"/>
        </LinearLayout>

        <!-- Swipe up bar indicator -->
        <!-- Bottom indicator pill in a LinearLayout, centered and bottom-aligned -->
        <LinearLayout
            android:id="@+id/swipe_up_bar_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <View
                android:id="@+id/swipe_up_bar"
                android:layout_width="90dp"
                android:layout_height="6dp"
                android:background="@drawable/blackline"
                android:backgroundTint="@color/rust"
                android:layout_marginTop="50dp"
                />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
