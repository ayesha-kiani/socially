<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="10dp">

    <!-- Top bar container -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/status_icons"
            app:tint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            app:tint="@color/black"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/socially_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:text="Socially"
        android:textColor="@color/darkoral"
        android:textStyle="bold"
        android:textSize="55sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- Username input with underline -->
    <EditText
        android:id="@+id/enterusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:background="@drawable/background"
        android:layout_below="@id/socially_text"
        android:layout_marginTop="24dp"
        android:padding="14dp"/>

    <!-- Password input with underline -->
    <EditText
        android:id="@+id/enterpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:background="@drawable/background"
        android:layout_below="@id/enterusername"
        android:layout_marginTop="16dp"
        android:padding="14dp"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterpassword"
        android:layout_alignParentEnd="true"
        android:text="Forgot password?"
        android:textColor="@color/rust"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/rust"
        app:cornerRadius="8dp"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forgot_password"
        android:backgroundTint="@color/rust"
        android:layout_marginEnd="32dp"/>

    <!-- OR separator (clean, responsive) -->
    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#D3D3D3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#D3D3D3" />
    </LinearLayout>

    <!-- Sign up text block -->
    <RelativeLayout
        android:id="@+id/signupline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/no_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="@color/rust"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/no_account_text"
            android:layout_alignBaseline="@id/no_account_text"
            android:text="Sign up"
            android:textColor="@color/rust"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- Bottom line separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:background="#D3D3D3" />

    <!-- Bottom brand label -->
    <TextView
        android:id="@+id/sociallybottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textStyle="bold"
        android:textColor="@color/rust"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/bottom_bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/line"
        android:layout_marginBottom="5dp"
        />


</RelativeLayout>
