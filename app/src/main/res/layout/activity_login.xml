<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <!-- Top bar container -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/status_icons"
            app:tint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            app:tint="@color/black"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <!-- Center logo -->
    <TextView
        android:id="@+id/socially_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:text="Socially"
        android:textColor="@color/rust"
        android:textSize="55sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dp"
        android:src="@color/black"
        android:layout_below="@id/socially_text"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dp"
        android:text="jacob_w"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/rust"
        app:cornerRadius="8dp"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/username_text"
        android:backgroundTint="@color/rust"
        android:layout_marginEnd="40dp"/>
    <TextView
        android:id="@+id/switchacc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:text="Switch accounts"
        android:textColor="@color/rust"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switchacc_text"
        android:layout_marginTop="138dp"
        android:background="#D3D3D3" />

    <RelativeLayout
        android:id="@+id/lastline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchacc_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/no_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="@color/rust"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/no_account_text"
            android:layout_alignBaseline="@id/no_account_text"
            android:text="Sign up"
            android:textColor="@color/rust"
            android:textSize="18sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_below="@id/lastline_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        />






</RelativeLayout>
