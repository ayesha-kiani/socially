<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:id="@+id/main">

    <!-- Top bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/camera"
            android:layout_centerInParent="true"
            app:tint="@color/black"/>

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:src="@drawable/status_icons"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/black"/>
    </RelativeLayout>

    <!-- Scrollable notifications and tabs -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF">

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="#FFF"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Following"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#B73557"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="You"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#B73557"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B73557"/>

            <!-- Follow Requests row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow Requests"
                android:textColor="#B73557"
                android:textSize="16sp"
                android:padding="14dp"/>

            <!-- "New" Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New"
                android:textStyle="bold"
                android:textColor="#888"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingLeft="14dp"
                android:paddingBottom="4dp"/>

            <!-- Example New Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#FFF"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/oval"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" karennne liked your photo. 1h"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:src="@drawable/greece"
                    android:layout_marginStart="100dp" />
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

            <!-- "Today" Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textStyle="bold"
                android:textColor="#888"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingLeft="14dp"
                android:paddingBottom="4dp"/>

            <!-- Example Today Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#FFF"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/oval"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kiero_d, zackjohn and 26 others"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="liked your photo. 3h"
                        android:textColor="#222"
                        android:textSize="15sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:src="@drawable/oval"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

            <!-- This Week Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textStyle="bold"
                android:textColor="#888"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingLeft="14dp"
                android:paddingBottom="4dp"/>
            <!-- ...Add more notifications here as per previous examples... -->
            <!-- This Week notification: mention -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:padding="14dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/oval"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love mentioned you in a comment: @jacob_w exactly.."
                        android:textColor="#222"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2d"
                        android:textColor="#AAA"
                        android:textSize="13sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/oval"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <!-- Example followers with "Message" buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/oval"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="martini_rond started following you. 3d"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Message"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/oval"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="maxjacobson started following you. 3d"
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Message"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <!-- Fixed bottom navbar -->
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Navigation bar items -->
        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/homeicon"
            android:contentDescription="Home"
            app:tint="@color/rust"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/searchicon"
            android:contentDescription="Search"
            app:tint="@color/darkoral"
            android:background="@color/coral"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/nav_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/addposticon"
            android:contentDescription="Add"
            app:tint="@color/rust"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/activityhearticon"
            android:contentDescription="Likes"
            app:tint="@color/rust"
            android:padding="8dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/oval"
            android:contentDescription="Profile"
            android:scaleType="centerCrop"
            android:padding="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
