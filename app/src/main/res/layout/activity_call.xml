<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/rust"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/oval"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_border" />

    <!-- Name -->
    <TextView
        android:id="@+id/caller_name"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mother ❤️"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <!-- Call Timer -->
    <TextView
        android:id="@+id/call_timer"
        android:layout_below="@id/caller_name"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:12"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <!-- Message/Notes Button (Left) -->
    <ImageView
        android:id="@+id/notes_btn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/notes"
        app:tint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="54dp"
        android:background="@android:color/transparent" />

    <!-- Hangup Button (Center) -->
    <ImageView
        android:id="@+id/hangup_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" />

    <!-- Speaker Button (Right) -->
    <ImageView
        android:id="@+id/speaker_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/volumehigh"
        app:tint="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="54dp"
        android:background="@android:color/transparent" />

</RelativeLayout>
