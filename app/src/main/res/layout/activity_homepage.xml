<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/camera"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/status_icons"
            app:tint="@color/black" />
    </RelativeLayout>

    <!-- Navigation bar -->
    <RelativeLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/camera_nav_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/camera_1"
            app:tint="@color/rust" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socially"
            android:textColor="@color/rust"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/reels_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="56dp"
            android:src="@drawable/reels"
            app:tint="@color/rust"
            />

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/share"
            app:tint="@color/rust"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/stories_scroll"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/stories_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Story item example -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/myStory"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/oval"
                    android:background="@drawable/instagram_story_ring"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Story"
                    android:textColor="@color/rust"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile2"
                    android:background="@drawable/instagram_story_ring"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sana"
                    android:textColor="@color/rust"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile1"
                    android:background="@drawable/instagram_story_ring"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Craig"
                    android:textColor="@color/rust"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE" />

    <!-- Posts Section -->
    <ScrollView
        android:id="@+id/posts_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/posts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Example Post Item -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="#EEE" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile_pic_holder"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentStart="true"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="3dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="23dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/profile_pic"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile1" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/profile_pic_holder"
                        android:layout_alignStart="@id/profile_pic_holder"
                        android:layout_marginStart="60dp"
                        android:text="Ayesha Kiani"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/profile_pic_holder"
                        android:layout_marginStart="60dp"
                        android:text="Tokyo, Japan"
                        android:layout_below="@id/profile_name"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                         />

                    <ImageButton
                        android:id="@+id/save_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_alignTop="@id/profile_pic_holder"
                        android:background="@android:color/transparent"
                        android:src="@drawable/options" />

                    <ImageView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@id/profile_pic_holder"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/greece" />

                    <LinearLayout
                        android:id="@+id/action_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/post_image"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageButton
                            android:id="@+id/like_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/like" />

                        <ImageButton
                            android:id="@+id/comment_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/comment" />

                        <ImageButton
                            android:id="@+id/share_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/share" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/bookmark_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/save" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/action_buttons"
                        android:background="#ddd" />

                    <LinearLayout
                        android:id="@+id/likes_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/action_buttons"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/liked_profile_pic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile2" />

                        <TextView
                            android:id="@+id/liked_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Liked by Sana and 400 others"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/post_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/likes_info"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="16dp"
                        android:text="Ayesha Kiani Had a great hike across this beautiful landscape"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Duplicate above CardView for another post -->
            <!-- ... -->

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/homeicon"
            android:contentDescription="Home"
            app:tint="@color/rust" />

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/searchicon"
            android:contentDescription="Search"
            />

        <ImageView
            android:id="@+id/nav_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/addposticon"
            android:contentDescription="Add"
            />

        <ImageView
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/activityhearticon"
            android:contentDescription="Likes" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/oval"
            android:contentDescription="Profile" />
    </LinearLayout>

</LinearLayout>
